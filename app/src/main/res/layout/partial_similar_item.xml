<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_5"
    app:cardCornerRadius="@dimen/dimens_2"
    android:background="@drawable/bg_rect_grey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimens_10">

        <ImageView
            android:layout_width="@dimen/dimens_90"
            android:layout_height="@dimen/dimens_90"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/dummy_product2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_1"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dummy_header_product_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_1"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dummy_product_price"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_1"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dummy_product_detail" />
    </LinearLayout>
</android.support.v7.widget.CardView>