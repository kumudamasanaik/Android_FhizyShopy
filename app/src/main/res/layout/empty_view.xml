<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimens_5"
    android:paddingLeft="@dimen/dimens_5"
    android:paddingRight="@dimen/dimens_12"
    android:paddingTop="@dimen/dimens_10">


    <ImageView
        android:id="@+id/empty_imageView"
        android:layout_width="@dimen/dimens_200"
        android:layout_height="@dimen/dimens_100"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/dimens_10"
        android:src="@drawable/logo"
       />

    <TextView
        android:id="@+id/empty_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_5"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.1"
        android:padding="@dimen/dimens_8"
        android:text="@string/no_result_found"
        android:textColor="@color/app_text_black"
        android:textSize="@dimen/dimens_12sp" />

    <Button
        android:id="@+id/empty_button"
        style="@style/SubmitOutlineBtn"
        android:layout_width="@dimen/dimens_160"
        android:layout_height="@dimen/dimens_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimens_14"
        android:elevation="@dimen/dimens_2"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/refresh"
        android:textSize="@dimen/dimens_10sp" />

</LinearLayout>