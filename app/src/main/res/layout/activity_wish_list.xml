<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_wish_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_botomview"
        android:layout_margin="@dimen/dimens_5"
        tools:itemCount="10"
        tools:listitem="@layout/adapter_my_cart_list_item" />

    <LinearLayout
        android:id="@+id/layout_botomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_continue"
            style="@style/btn_check_out_style"
            android:layout_gravity="bottom" />

    </LinearLayout>
</RelativeLayout>